<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Стиль для активного пункта меню */
        .nav-link.active-tab {
            border-bottom: 2px solid #fff;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand" href="/">РИА "АРС"</a>
        <div class="text-light me-auto ms-3">📍 Санкт-Петербург, ул.Колотушкина 41</div>
        <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" href="/Companies">Компании</a></li>
            <li class="nav-item"><a class="nav-link" href="/Reviews">Отзывы</a></li>
            <li class="nav-item">
                <a id="adsNavLink" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active-tab" : "")"
                   href="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "#" : "/Ads")"
                   onclick="return handleNavClick('ads')">Реклама</a>
            </li>
            <li class="nav-item">
                <a id="accountNavLink" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Account" ? "active-tab" : "")"
                   href="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "#" : "/Account")"
                   onclick="return handleNavClick('account')">Личный кабинет</a>
            </li>
        </ul>
    </nav>

    @if (User.IsInRole("admin"))
    {
        <div class="admin-links bg-secondary py-2">
            <div class="container">
                <a class="text-white me-3" href="/Users">Пользователи</a>
                <a class="text-white" href="/Stats">Статистика сайта</a>
            </div>
        </div>
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        // Обработка кликов по навигации
        function handleNavClick(tabName) {
            // Если мы уже на главной странице - переключаем вкладки
            if (window.location.pathname === '/') {
                switchTab(tabName);
                return false; // Отменяем переход по ссылке
            }
            // Иначе - разрешаем стандартное поведение (переход на /Ads или /Account)
            return true;
        }

        // Функция переключения вкладок (работает только на главной)
        function switchTab(tabName) {
            // Скрываем все вкладки
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.style.display = 'none';
            });

            // Показываем выбранную вкладку
            const activeTab = document.getElementById(tabName + 'Content');
            if (activeTab) {
                activeTab.style.display = 'block';
            }

            // Обновляем активное состояние в навбаре
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active-tab');
            });
            document.getElementById(tabName + 'NavLink').classList.add('active-tab');

            // Обновляем URL без перезагрузки
            history.pushState(null, null, '#' + tabName);
        }

        // При загрузке страницы проверяем хэш
        document.addEventListener('DOMContentLoaded', function () {
            if (window.location.pathname === '/') {
                const hash = window.location.hash.substring(1);
                if (hash === 'ads' || hash === 'account') {
                    switchTab(hash);
                } else {
                    // По умолчанию показываем "Реклама"
                    switchTab('ads');
                }
            }
        });
    </script>
</body>
</html>