<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -  Приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Стиль для активного пункта меню */
        .nav-link.active-tab {
            border-bottom: 2px solid #fff;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand" href="/">РИА "АРС"</a>
        <div class="text-light me-auto ms-3">📍 Санкт-Петербург, ул.Колотушкина 41</div>
        <ul class="navbar-nav ms-auto">
            <li class="nav-item"><a class="nav-link" href="/Companies">Компании</a></li>
            <li class="nav-item"><a class="nav-link" href="/Reviews">Отзывы</a></li>
            <li class="nav-item">
                <a id="adsNavLink" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active-tab" : "")"
                   href="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "#" : "/Ads")"
                   onclick="return handleNavClick('ads')">Реклама</a>
            </li>
            <li class="nav-item">
                <a id="accountNavLink" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Account" ? "active-tab" : "")"
                   href="@(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "#" : "/Account")"
                   onclick="return handleNavClick('account')">Личный кабинет</a>
            </li>

            @* ���� ����������� *@
            @{
                var userLogin = Session["UserLogin"] as string;
            }

            @if (userLogin != null)
            {
                <li class="nav-item">
                    <span class="navbar-text text-light me-2">?? @userLogin</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Logout">�����</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Login" ? "active-tab" : "")" href="/Account/Login">����</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Register" ? "active-tab" : "")" href="/Account/Register">�����������</a>
                </li>
            }
        </ul>
    </nav>

    @if (User.IsInRole("admin"))
    {
        <div class="admin-links bg-secondary py-2">
            <div class="container">
                <a class="text-white me-3" href="/Users">������������</a>
                <a class="text-white" href="/Stats">���������� �����</a>
            </div>
        </div>
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ��� ���������� ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        // ��������� ������ �� ���������
        function handleNavClick(tabName) {
            // ���� �� ��� �� ������� �������� - ����������� �������
            if (window.location.pathname === '/') {
                switchTab(tabName);
                return false; // �������� ������� �� ������
            }
            // ����� - ��������� ����������� ��������� (������� �� /Ads ��� /Account)
            return true;
        }

        // ������� ������������ ������� (�������� ������ �� �������)
        function switchTab(tabName) {
            // �������� ��� �������
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.style.display = 'none';
            });

            // ���������� ��������� �������
            const activeTab = document.getElementById(tabName + 'Content');
            if (activeTab) {
                activeTab.style.display = 'block';
            }

            // ��������� �������� ��������� � �������
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active-tab');
            });
            document.getElementById(tabName + 'NavLink').classList.add('active-tab');

            // ��������� URL ��� ������������
            history.pushState(null, null, '#' + tabName);
        }

        // ��� �������� �������� ��������� ���
        document.addEventListener('DOMContentLoaded', function () {
            if (window.location.pathname === '/') {
                const hash = window.location.hash.substring(1);
                if (hash === 'ads' || hash === 'account') {
                    switchTab(hash);
                } else {
                    // �� ��������� ���������� "�������"
                    switchTab('ads');
                }
            }
        });
    </script>
</body>
<!-- ��������� ���� ������ � ����������� -->
<div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="authModalLabel">����������� / �����������</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="�������"></button>
            </div>
            <div class="modal-body">
                <iframe src="/Account/LoginOrRegister" style="width:100%; height:400px; border:none;"></iframe>
            </div>
        </div>
    </div>
</div>

</html>
